!!!
%html
%head

  %title CafeAmbience
  = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
  = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  = favicon_link_tag 'favicon.ico'

  %link(href="https://fonts.googleapis.com/css?family=Quintessential" rel="stylesheet")

/ edit_user_item_path(@user)

%body
  %header
    .header_inner
      %nav
        / # = link_to 'Profile', user_path(@user_id)
        = link_to 'About', about_path
        = link_to 'Cafes', cafes_path
        = link_to 'Maps', maps_path
        -if user_signed_in?
          = link_to 'New Cafe', new_cafe_path
          = link_to 'Sign Out', destroy_user_session_path, method: :get
        - else
          = link_to 'log_in', new_user_session_path
  %p.notice= notice
  / %p.alert= alert



  = yield


